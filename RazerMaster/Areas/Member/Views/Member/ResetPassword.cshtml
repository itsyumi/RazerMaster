@model RazerMaster.Areas.Member.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";

}

@section topCSS{
    <link href="~/Areas/Member/Assets/css/login.css" rel="stylesheet" />
    <style>
        .loginbox p {
            color: #999999;
        }
    </style>
}
<div class="logo">
    <a href="/">
        <img src="/Assets/Img/RazerMasterLogo4.svg" alt="" srcset="">
    </a>
</div>


@using (Html.BeginForm("ResetPassword", "Member", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-row justify-content-center">
            <div class="loginbox text-center">
                <h3>Reset Password</h3>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.Code)
                <div class="form-group">
                    <p>New Password</p>
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <p>Confirm New Password</p>
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-primary" value="RESET" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
