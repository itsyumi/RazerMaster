@model RazerMaster.Areas.Member.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forget Password";
}
@section topCSS{
    <link href="~/Areas/Member/Assets/css/login.css" rel="stylesheet" />
    <style>
        .loginbox p {
            color:#999999;
        }
    </style>
    
}
<div class="logo">
    <a href="/">
        <img src="/Assets/Img/RazerMasterLogo4.svg" alt="" srcset="">
    </a>
</div>

<div class="container">
    @using (Html.BeginForm("ForgotPassword", "Member", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-row justify-content-center">
            <div class="loginbox text-center col-md-4">
                <h3>Forgot Password</h3>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <p>Please enter your email address below and we will send you information to change your password.</p>
                    @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label"  })*@
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-primary" value="RESET" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
