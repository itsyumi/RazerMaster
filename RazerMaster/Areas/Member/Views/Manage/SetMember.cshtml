@model RazerMaster.Areas.Member.ViewModels.MemberDetail

@{
    ViewBag.Title = "SetMember";
}
@section topCSS{
    <link href="~/Areas/Member/Assets/css/AccountManage.css" rel="stylesheet" />
    <style>
        .account .btn {
            max-width: 160px;
        }

            .account .btn a {
                color: white;
            }
    </style>
}

<div class="account">
    <div class="container">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Account Detail", "SetMember", null, new { @class = "nav-link active" })
                @*<a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Account Detail</a>*@
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Change Password", "ChangePassword", null, new { @class = "nav-link" })
                @*<a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Change Password</a>*@
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Manage Logins", "ManageLogins", null, new { @class = "nav-link" })

                @*<a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">External login</a>*@
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Order History", "OrderHistory", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Coin History", "CoinHistory", null, new { @class = "nav-link" })
            </li>
        </ul>
        <div class="main-content">
            @using (Html.BeginForm(Html.BeginForm("SetMember", "Manage", FormMethod.Post, new { role = "form" })))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group row">
                        <label for="" class="col-sm-2 text-white col-form-label-lg">RealName</label>
                        <div class="col-sm-8">
                            <h2 class="text-white">@Model.RealName</h2>
                        </div>
                        <div class="col-sm-2">
                            <h6 class="text-warning">RazerCoin: $ @ViewBag.CurrentCoin</h6>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="NickName" class="col-sm-2 text-white col-form-label-lg">NickName</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.NickName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Address" class="col-sm-2 text-white col-form-label-lg">Address</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="Number" class="col-sm-2 text-white col-form-label-lg">Phone Number</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Number, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-2">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            <hr class="border-top border-white" />
            @using (Html.BeginForm("LogOff", "Member", new { area = "Member" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <div class="text-right">
                    <a class="btn btn-default" href="javascript:document.getElementById('logoutForm').submit()">Sign out</a>
                    <p class="text-success">@ViewBag.StatusMessage</p>
                </div>
            }
        </div>
    </div>
</div>

