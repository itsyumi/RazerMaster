@model RazerMaster.Areas.Member.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
@section topCSS{
    <link href="~/Areas/Member/Assets/css/AccountManage.css" rel="stylesheet" />
}

<div class="account">
    <div class="container">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Account Detail", "SetMember", null, new { @class = "nav-link" })
                @*<a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Account Detail</a>*@
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Change Password", "ChangePassword", null, new { @class = "nav-link active" })

                @*<a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Change Password</a>*@
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Manage Logins", "ManageLogins", null, new { @class = "nav-link" })
                @*<a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">External login</a>*@
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Order History", "OrderHistory", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item" role="presentation">
                @Html.ActionLink("Coin History", "CoinHistory", null, new { @class = "nav-link" })
            </li>
        </ul>
        <div class="main-content">

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group row">
                    <label for="" class="col-sm-2 text-white col-form-label-lg">OldPassword</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group row">
                    <label for="" class="col-sm-2 text-white col-form-label-lg">NewPassword</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group row">
                    <label for="" class="col-sm-2 text-white col-form-label-lg">ConfirmPassword</label>
                    <div class="col-sm-7">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-3">
                        <input type="submit" value="Change Password" class="btn btn-default" /><p class="text-success">@ViewBag.StatusMessage</p>
                    </div>
                </div>
             
              
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}