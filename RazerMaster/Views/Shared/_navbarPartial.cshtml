<div class="super_container">
    <!-- Header -->
    <header class="header">
        <div class="header_container razer-BGC">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="header_content d-flex align-items-center justify-content-between">
                            <div class="logo mr-1">
                                <a href="@Url.Action("Index", "Home", new { area="" })">
                                    <img src="~/Assets/Img/RazerMasterLogo4.svg" alt="" srcset="">
                                </a>
                            </div>
                            <nav class="main_nav">
                                <ul>
                                    <li class="hassubs">
                                        <span class="razer-purple">Latest News</span>
                                        <ul>
                                            <li>@Html.ActionLink("Promotion", "Promotions", "LatestNews", new { area = "" }, "")</li>
                                            <li>@Html.ActionLink("News", "News", "LatestNews", new { area = "" }, "")</li>
                                        </ul>
                                    </li>

                                    <li class="hassubsProduct">
                                        @Html.ActionLink("Product","Index","Product", new { area = "" }, new { @class = "razer-purple font-weight-normal" })
                                    </li>

                                    <li class="hassubs">
                                        <span class="razer-purple">About</span>
                                        <ul>
                                            <li>@Html.ActionLink("OurStory", "Story", "About", new { area = "" }, "")</li>
                                            <li>@Html.ActionLink("OurStore", "Store", "About", new { area = "" }, "")</li>
                                        </ul>
                                    </li>
                                    <li class="hassubs">
                                        <span class="razer-purple">Support</span>
                                        <ul>
                                            <li>@Html.ActionLink("FAQ", "FAQ", "Support", new { area = "" }, "")</li>
                                            <li>@Html.ActionLink("Contact", "Contact", "Support", new { area = "" }, "")</li>
                                        </ul>
                                    </li>

                                    <li class="hassubsProduct mr-2">
                                        @Html.ActionLink("Coin Event","Index","SlotMachineGame", new { area = "" }, new { @class="razer-purple font-weight-normal"})
                                    </li>

                                </ul>
                            </nav>

                            @Html.Partial("_LoginPartial")

                            <div class="header_extra d-flex">
                                <div class="member razer-purple px-3" id="userIcon">
                                    @if (Request.IsAuthenticated)
                                    {
                                        <a href="@Url.Action("SetMember", "Manage", new { area = "Member" })"><i class="fa fa-user razer-purple"></i></a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Login", "Member", new { area = "Member" })"><i class="fa fa-user razer-purple"></i></a>
                                    }
                                </div>
                                <div class="shopping_cart" id="Cart">
                                    @Html.Partial("_CartPartial")
                                </div>
                                <div class="search">
                                    <div class="search_icon">
                                        <i class="fa fa-search razer-purple"></i>
                                    </div>
                                </div>

                                <div class="hamburger"><i class="fa fa-bars razer-purple" aria-hidden="true"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Panel -->
        <div class="search_panel trans_300" style="background:#000000;color:#ffffff">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="search_panel_content d-flex flex-row align-items-center justify-content-end">
                            @*<form action="#">*@
                            @using (Html.BeginForm("SearchProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <input type="text" name="keyword" class="search_input" placeholder="Please enter product name" required="required">
                                <button type="submit" class="search_panel_submit">
                                    <i class="fa fa-search razer-purple"></i>
                                </button>
                            }
                            @*</form>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Social -->
        @*<div class="header_social">
                <ul>
                    <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                </ul>
            </div>*@
    </header>
    <div class="header-after"></div>
    <!-- Menu -->
    <div class="menu menu_mm trans_300" style="background:#000000;color:#ffffff">
        <div class="menu_container menu_mm">
            <div class="page_menu_content">
                <div class="page_menu_search menu_mm position-relative">
                    @*<form action="#">*@
                    @using (Html.BeginForm("SearchProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <input type="text" name="keyword" required="required" class="page_menu_search_input menu_mm" placeholder="Search for products...">
                        <button type="submit" class="search_panel_submit position-absolute" style="top:10px">
                            <i class="fa fa-search razer-purple"></i>
                        </button>
                    }
                    @*</form>*@
                </div>
                <ul class="page_menu_nav menu_mm">
                    <li class="page_menu_item has-children menu_mm">
                        <span>Latest News</span><i class="fa fa-angle-down"></i>
                        <ul class="page_menu_selection menu_mm">
                            <li class="page_menu_item menu_mm">@Html.ActionLink("Promotion", "Promotions", "LatestNews", new { area = "" }, "")</li>
                            <li class="page_menu_item menu_mm">@Html.ActionLink("News", "News", "LatestNews", new { area = "" }, "")</li>
                        </ul>
                    </li>
                    <a href="@Url.Action("Index","Product")" style="color:#ffffff;height:auto">
                        Products
                    </a>
                    <li class="page_menu_item has-children menu_mm">
                        <span>About</span><i class="fa fa-angle-down"></i>
                        <ul class="page_menu_selection menu_mm">
                            <li class="page_menu_item menu_mm">@Html.ActionLink("OurStory", "Story", "About", new { area = "" }, "")</li>
                            <li class="page_menu_item menu_mm">@Html.ActionLink("OurStore", "Store", "About", new { area = "" }, "")</li>
                        </ul>
                    </li>
                    <li class="page_menu_item has-children menu_mm">
                        <span>Support</span><i class="fa fa-angle-down"></i>
                        <ul class="page_menu_selection menu_mm">

                            <li class="page_menu_item menu_mm">>@Html.ActionLink("FAQ", "FAQ", "Support", new { area = "" }, "")</li>
                            <li class="page_menu_item menu_mm">@Html.ActionLink("Contact", "Contact", "Support", new { area = "" }, "")</li>
                        </ul>
                    </li>
                    <li class="page_menu_item has-children menu_mm">
                        <span>Member Center</span><i class="fa fa-angle-down"></i>
                        <ul class="page_menu_selection menu_mm">
                            <li class="page_menu_item menu_mm">@Html.ActionLink("Edit", "Index", "EditMember", new { area = "" }, "")</li>
                            <li class="page_menu_item menu_mm">@Html.ActionLink("Query", "Index", "OrderQuery", new { area = "" }, "")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="menu_close"><i class="fa fa-times" aria-hidden="true"></i></div>
        @*<div class="menu_social">
                <ul>
                    <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                </ul>
            </div>*@
    </div>
</div>
